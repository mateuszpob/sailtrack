
















<style>
    iframe{
        position:absolute;
        top:0;
        left:0;
        z-index:100;
    }
    canvas{

        position:absolute;
        top:0;
        left:0;
        z-index:101;
    }
    .track-timeline{
        position: relative;
        width: 100%;
        height: 8px;
        background: #ccc;
        border: 1px solid #000;
    }
    .pointer{
        position: absolute;
        top: -6px;
        background: #f20d0d;
        border: 1px solid #000;
        height: 18px;
        width: 4px;

    }
</style>


<div class="row">
    <div class="col-md-12">
        <!--Start X-Panel-->
        <div class="x_panel">
            <div class="x_title">
                <h2>The recorded sessions <small>Mouse Tracking</small></h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#">Settings 1</a>
                            </li>
                            <li><a href="#">Settings 2</a>
                            </li>
                        </ul>
                    </li>
                    <li><a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="timeline-wrapper">
                    <div class="row">
                        <div class="col-md-12">
                            <div id="mouse-timeline" class="track-timeline">
                                <div id="mouse-timeline-pointer" class="pointer"></div>
                            </div>
                        </div></div>
                    <div class="row">
                        <div class="col-md-12">
                            <div id="time-current" class="pull-left"></div>
                            <div id="time-total" class="pull-right"></div>
                        </div>
                    </div>

                </div>

                <br>
                <div style="position: relative">
                    <iframe id="tracker-background" src=""></iframe>
                    <canvas id="tracker-canvas"></canvas>
                </div>
            </div>
        </div>     
        <!--End X-Panel-->


    </div>
</div>
<script>
    var tracker_id = "<%= tracker_id %>";
    var t = new Tracker();
    t.init(tracker_id);

